# Docker images for the two Node.js services
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Active pool (the one that receives live traffic) --> primary
ACTIVE_POOL=blue

# Release identifiers â€” used for version headers in /version
RELEASE_ID_BLUE=1.0.0-blue
RELEASE_ID_GREEN=1.0.0-green

# Port each Node.js app listens on internally
APP_PORT=3000

# Nginx public port (where clients connect)
NGINX_PORT=8080

# Blue app exposed port (for chaos testing)
BLUE_PORT=8081

# Green app exposed port (for chaos testing)
GREEN_PORT=8082
